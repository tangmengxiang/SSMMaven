<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tmx.mapper.UserMapper" >
  <insert id="addUser" parameterType="com.tmx.domain.User" >
    insert into user (user_id, user_name)
    values (#{user_id,jdbcType=INTEGER}, #{user_name,jdbcType=VARCHAR})
  </insert>
  
  <select id="getUser"  resultType="com.tmx.domain.User">
  	select * from `user` where user_name = #{user_name} and user_password = #{user_password}
  </select>
  <select id="getUserByName"  resultType="com.tmx.domain.User">
  	select * from `user` where user_name = #{username}
  </select>
</mapper>